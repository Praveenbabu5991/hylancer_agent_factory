# ============================================
# Content Studio Agent - Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Required: Google API Key (at least one is needed)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_google_api_key_here

# --- Model Configuration ---
DEFAULT_MODEL=gemini-2.5-flash

# Per-Agent Models (uncomment to override)
ORCHESTRATOR_MODEL=gemini-2.5-flash
IDEA_MODEL=gemini-2.5-flash
WRITER_MODEL=gemini-2.5-flash
IMAGE_MODEL=gemini-3-pro-image-preview
EDIT_MODEL=gemini-3-pro-image-preview
CAMPAIGN_MODEL=gemini-2.5-flash
CAPTION_MODEL=gemini-2.5-flash
VIDEO_MODEL=veo-3.1-generate-preview

# --- Server Configuration ---
HOST=0.0.0.0
PORT=5001
DEBUG=false

# --- Upload Limits ---
MAX_UPLOAD_SIZE_MB=10
MAX_USER_IMAGES=10
MAX_IMAGE_DIMENSION=4096

# --- Rate Limiting ---
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# --- Session ---
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS_PER_USER=10
